                <TextBox x:Name="tb_string1" Text="2+3 223 2223" HorizontalAlignment="Left" Margin="10,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="249" Height="30" IsEnabled="False"/>
                <TextBox x:Name="tb_string2" Text="aa aba abba abbba abbbba abbbbba" HorizontalAlignment="Left" Margin="10,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="249" Height="30" IsEnabled="False"/>


